<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="4sp"
    android:layout_marginStart="4sp"
    android:layout_marginEnd="4sp"
    app:cardElevation="8sp"
    app:cardCornerRadius="4sp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@color/md_grey_50"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:id="@+id/notificationTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notification Title"
            android:textSize="16sp"
            android:textColor="@color/md_black_1000"
            android:textStyle="bold"/>

        <TextView
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:id="@+id/notificationDescriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1sp"
            android:layout_below="@id/notificationTitleTextView"
            android:textColor="@color/md_blue_800"
            android:text="This is the a testing notification . If you guys have anything other than tell me bacha log"/>

        <TextView
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:id="@+id/notificationTimeDateTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="12 jan at 12:00 AM"
            android:layout_below="@id/notificationDescriptionTextView"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>