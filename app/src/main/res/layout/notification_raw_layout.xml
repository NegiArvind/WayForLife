<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/md_grey_100"
    android:paddingTop="8sp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginStart="15sp"
        android:layout_marginEnd="20sp"
        android:id="@+id/notificationTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notification Title"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/md_black_1000"/>

    <TextView
        android:layout_marginStart="15sp"
        android:layout_marginEnd="20sp"
        android:id="@+id/notificationDescriptionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1sp"
        android:textSize="15sp"
        android:layout_below="@id/notificationTitleTextView"
        android:text="This is the a testing notification . If you guys have anything other than tell me bacha log"/>

    <TextView
        android:layout_marginStart="15sp"
        android:layout_marginEnd="20sp"
        android:id="@+id/notificationTimeDateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:layout_marginTop="6sp"
        android:text="12 jan at 12:00 AM"
        android:layout_below="@id/notificationDescriptionTextView"/>

    <View
        android:layout_below="@id/notificationTimeDateTextView"
        android:layout_marginTop="8sp"
        android:layout_width="match_parent"
        android:background="@color/md_blue_grey_500"
        android:layout_height="1sp"/>

</RelativeLayout>