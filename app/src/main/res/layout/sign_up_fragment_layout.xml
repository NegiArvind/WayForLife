<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/wayForLifeImageView"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_launcher_background" />

        <RelativeLayout
            android:layout_below="@+id/wayForLifeImageView"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/firstNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="54sp"
                android:layout_marginStart="24sp"
                android:layout_marginEnd="24sp"
                android:ems="10"
                android:maxLines="1"
                android:hint="First Name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/lastNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/firstNameEditText"
                android:layout_marginTop="8sp"
                android:layout_marginStart="24sp"
                android:layout_marginEnd="24sp"
                android:ems="10"
                android:maxLines="1"
                android:hint="Last Name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lastNameEditText"
                android:layout_marginTop="8sp"
                android:layout_marginStart="24sp"
                android:layout_marginEnd="24sp"
                android:ems="10"
                android:maxLines="1"
                android:hint="@string/email_hint"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/numberEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/emailEditText"
                android:layout_marginTop="8sp"
                android:layout_marginStart="24sp"
                android:layout_marginEnd="24sp"
                android:ems="10"
                android:maxLines="1"
                android:hint="Phone Number"
                android:inputType="number" />

            <Spinner
                android:id="@+id/stateSpinner"
                android:layout_marginTop="8sp"
                android:layout_marginStart="24sp"
                android:layout_marginEnd="24sp"
                android:layout_below="@id/numberEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/citySpinner"
                android:layout_marginTop="8sp"
                android:layout_marginStart="24sp"
                android:layout_marginEnd="24sp"
                android:layout_below="@id/stateSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <RelativeLayout
                android:id="@+id/passwordRelativeLayout"
                android:layout_below="@id/citySpinner"
                android:layout_width="match_parent"
                android:layout_marginTop="8sp"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/passwordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24sp"
                    android:layout_marginEnd="24sp"
                    android:ems="10"
                    android:maxLines="1"
                    android:hint="Password"
                    android:inputType="textPassword" />

                <ImageView
                    android:id="@+id/visibilityPasswordImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@id/passwordEditText"
                    android:layout_centerVertical="true"
                    android:src="@drawable/visibility_off_image"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/confirmPasswordRelativeLayout"
                android:layout_below="@id/passwordRelativeLayout"
                android:layout_width="match_parent"
                android:layout_marginTop="8sp"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/confirmPasswordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24sp"
                    android:layout_marginEnd="24sp"
                    android:ems="10"
                    android:maxLines="1"
                    android:hint="Confirm Password"
                    android:inputType="textPassword" />

                <ImageView
                    android:id="@+id/visibilityConfirmPasswordImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@id/confirmPasswordEditText"
                    android:layout_centerVertical="true"
                    android:src="@drawable/visibility_off_image"/>

            </RelativeLayout>

            <Button
                android:id="@+id/sendOtpButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/confirmPasswordRelativeLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24sp"
                android:layout_marginBottom="24sp"
                android:text="SEND OTP" />

        </RelativeLayout>


    </RelativeLayout>


</ScrollView>